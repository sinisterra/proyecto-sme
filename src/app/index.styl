      &.pull-right
        float right
        width 50px

md-sidenav
  height 100vh

.container
  max-width 1140px
  margin 0 auto

.card
  background-color #fff

// @media(min-width 480px)
md-radio-group.radio-inline
  md-radio-button
    display inline

.card-header
  border-bottom 2px solid rgb(244,67,54)
  color rgb(244,67,54)
  // color white

.card-md
  width 100%
  max-width 500px

primary-color = rgb(198,40,40)

.primary-bg
  background-color primary-color
  color white

.full-height
  height calc(100vh - 128px);

.sp
  margin-right 0.5ch
  
.three-columns
  column-count 3
  
md-datepicker
  margin 26px 10px 16px 6px
  
md-input-container label, md-input-container .md-placeholder
  color rgba(0,0,0,0.6)
  font-size =13px

md-input-container:not(.md-input-invalid).md-input-has-value label
  color #000
  
md-select .md-select-value.md-select-placeholder
  color #000
  
.menu {
  margin: 0;
  overflow-x: hidden;
}

.side-menu-icon{
  height: 100%;

  padding-right 0.5rem;
  line-height:inherit;
  font-size: 1.2rem;
}


