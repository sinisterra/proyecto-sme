html
  font-family 'Roboto', sans-serif

[layout=row]
  flex-direction row

.video-container
  position relative
  padding-bottom 56.25%
  padding-top 30px
  height 0

.video-container iframe
  position absolute
  top 0
  left  0
  width 100%
  height 100%

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.thumbnail
  height 200px
  img
    &.pull-right
      width 50px

